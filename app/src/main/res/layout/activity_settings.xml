<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/back_button"
        android:background="@drawable/back_button"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>




    <TextView
        android:fontFamily="@font/quicksand_regular"
        android:textFontWeight="500"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Settings"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="25dp"
        android:layout_width="100dp"
        android:layout_height="40dp"/>




    <TextView
        android:fontFamily="@font/quicksand_regular"
        android:id="@+id/content_creators"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textFontWeight="600"
        android:text="Content Creators"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <TextView
        android:fontFamily="@font/quicksand_regular"
        android:layout_marginTop="5dp"
        android:id="@+id/feedback"
        android:layout_below="@+id/content_creators"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textFontWeight="600"
        android:text="Feedback"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <TextView
        android:fontFamily="@font/quicksand_regular"
        android:layout_marginTop="5dp"
        android:id="@+id/privacyPolicy"
        android:layout_below="@+id/feedback"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textFontWeight="600"
        android:text="Privacy Policy and Terms of Use"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <TextView
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/quicksand_regular"
        android:textColor="#ADADAD"
        android:textSize="12dp"
        android:textFontWeight="400"
        android:text="App Version: 13.0"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/quicksand_regular"
        android:layout_marginTop="10dp"
        android:textColor="#ADADAD"
        android:textSize="12dp"
        android:textFontWeight="400"
        android:text="Â© Aideo Media Pvt. Ltd., 2023"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>



</RelativeLayout>